@page
@model StJosephBazaar.Pages.Booths.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Booths</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Friday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Saturday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Auction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Gross_Revenue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Booth) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Friday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Saturday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Auction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booth[0].Gross_Revenue)
            </th>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
