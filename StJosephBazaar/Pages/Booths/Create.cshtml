@page
@model StJosephBazaar.Pages.Booths.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booth</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booth.Year" class="control-label"></label>
                <select asp-for="Booth.YearID" class="form-control"
                        asp-items="@Model.YearNameSL">
                    <option value="">-- Select Year --</option>
                </select>
                <span asp-validation-for="Booth.YearID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Booth.Name" class="control-label"></label>
                <input asp-for="Booth.Name" class="form-control" />
                <span asp-validation-for="Booth.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booth.Friday" class="control-label"></label>
                <input asp-for="Booth.Friday" class="form-control" />
                <span asp-validation-for="Booth.Friday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booth.Saturday" class="control-label"></label>
                <input asp-for="Booth.Saturday" class="form-control" />
                <span asp-validation-for="Booth.Saturday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booth.Auction" class="control-label"></label>
                <input asp-for="Booth.Auction" class="form-control" />
                <span asp-validation-for="Booth.Auction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booth.Purchases" class="control-label"></label>
                <input asp-for="Booth.Purchases" class="form-control" />
                <span asp-validation-for="Booth.Purchases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
