@page
@model StJosephBazaar.Pages.Years.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Year</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Year.YearRef" class="control-label"></label>
                <select asp-for="Year.RefId" class="form-control"
                        asp-items="@Model.YearNameSL">
                    <option value="">-- Select Year --</option>
                </select>
                <span asp-validation-for="Year.RefId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Year.YearVal" class="control-label"></label>
                <input asp-for="Year.YearVal" class="form-control" />
                <span asp-validation-for="Year.YearVal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year.Friday" class="control-label"></label>
                <input asp-for="Year.Friday" class="form-control" />
                <span asp-validation-for="Year.Friday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year.Saturday" class="control-label"></label>
                <input asp-for="Year.Saturday" class="form-control" />
                <span asp-validation-for="Year.Saturday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a ID="return" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
