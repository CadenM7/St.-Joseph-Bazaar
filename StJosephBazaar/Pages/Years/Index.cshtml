@model StJosephBazaar.Pages.Years.IndexModel

@{
    ViewData["Title"] = "Years";
}

<h1>Years</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year[0].YearVal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year[0].Friday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year[0].Saturday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Year) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YearVal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Friday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saturday)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
