@page
@model StJosephBazaar.Pages.Expenses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.Date" class="control-label"></label>
                <input asp-for="Expense.Date" class="form-control" />
                <span asp-validation-for="Expense.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.InvoiceNum" class="control-label"></label>
                <input asp-for="Expense.InvoiceNum" class="form-control" />
                <span asp-validation-for="Expense.InvoiceNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.CheckNum" class="control-label"></label>
                <input asp-for="Expense.CheckNum" class="form-control" />
                <span asp-validation-for="Expense.CheckNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Description" class="control-label"></label>
                <input asp-for="Expense.Description" class="form-control" />
                <span asp-validation-for="Expense.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Total" class="control-label"></label>
                <input asp-for="Expense.Total" class="form-control" />
                <span asp-validation-for="Expense.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Booth" class="control-label"></label>
                <select asp-for="Expense.BoothID" class="form-control" 
                        asp-items="@Model.BoothNameSL"></select>
                <span asp-validation-for="Expense.BoothID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a ID="return" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
