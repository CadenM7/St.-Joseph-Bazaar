@page
@model StJosephBazaar.Pages.Comparisons.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comparison</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comparison.YearInit" class="control-label"></label>
                <select asp-for="Comparison.InitID" class="form-control"
                        asp-items="@Model.YearNameSL">
                    <option value="">-- Select Year --</option>
                </select>
                <span asp-validation-for="Comparison.InitID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Comparison.YearComp" class="control-label"></label>
                <select asp-for="Comparison.CompID" class="form-control"
                        asp-items="@Model.YearNameSL">
                    <option value="">-- Select Year --</option>
                </select>
                <span asp-validation-for="Comparison.CompID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
